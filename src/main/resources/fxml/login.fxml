<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="library.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">


    <children>
        <VBox spacing="20"
              alignment="TOP_CENTER"
              AnchorPane.topAnchor="20.0"
              AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0">

            <children>
                <Label text="Library Management System"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <TabPane tabClosingPolicy="UNAVAILABLE" prefWidth="500" prefHeight="260">
                    <tabs>

                        <Tab text="Member">
                            <content>
                                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
                                    <children>
                                        <GridPane hgap="10" vgap="10">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                                                <ColumnConstraints halignment="LEFT" prefWidth="220"/>
                                            </columnConstraints>

                                            <children>
                                                <Label text="Username:"
                                                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                                <TextField fx:id="memberUsernameField"
                                                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                                <Label text="Password:"
                                                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                                <PasswordField fx:id="memberPasswordField"
                                                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                            </children>
                                        </GridPane>

                                        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                                            <children>
                                                <Button text="Login"
                                                        prefWidth="100"
                                                        onAction="#handleMemberLogin"/>
                                                <Button text="Create Account"
                                                        prefWidth="120"
                                                        onAction="#handleMemberRegister"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>

                        <Tab text="Librarian">
                            <content>
                                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
                                    <children>
                                        <GridPane hgap="10" vgap="10">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                                                <ColumnConstraints halignment="LEFT" prefWidth="220"/>
                                            </columnConstraints>

                                            <children>
                                                <Label text="Username:"
                                                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                                <TextField fx:id="librarianUsernameField"
                                                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                                <Label text="Password:"
                                                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                                <PasswordField fx:id="librarianPasswordField"
                                                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                            </children>
                                        </GridPane>

                                        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                                            <children>
                                                <Button text="Login"
                                                        prefWidth="100"
                                                        onAction="#handleLibrarianLogin"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>

                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
